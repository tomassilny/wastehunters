<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tosi.wastehunters.MainPanel"
    tools:showIn="@layout/app_bar_main_panel"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clickable="true"
                android:background="@drawable/header_nd"
                android:padding="10dp"
                android:elevation="6dp">

                <TextView
                    android:text="@string/welcome_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginTop="30dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView3"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/avatar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView5" />

                <TextView
                    android:text="PROFIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal|bold"
                    android:textColor="#fff" />

                <RelativeLayout
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/circle_l">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#fff"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="90dp"
                            android:layout_height="90dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#fff"
                            android:src="#7b000000"
                            android:id="@+id/imageView11" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                app:srcCompat="@drawable/trash_two"
                                android:id="@+id/imageView7"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textView6"
                                android:layout_toEndOf="@+id/textView6"
                                android:layout_marginLeft="3dp"
                                android:layout_width="18dp"
                                android:layout_height="18dp" />

                            <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView6"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#fff" />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="380dp"
                android:background="@drawable/round_and_shadow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="180dp"
                android:elevation="6dp"
                android:padding="10dp"
                android:onClick="containers">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/trash_black"
                    android:id="@+id/imageView9"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="KONTAJNERY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView9"
                    android:layout_toEndOf="@+id/imageView9"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:textColor="#212121"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imageView9">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView12"
                        app:srcCompat="@drawable/plast_t"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="0dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/paper_t"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="39dp"
                        android:id="@+id/imageView13" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/glass_t"
                        android:id="@+id/imageView14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="0dp" />

                    <TextView
                        android:text="Žltý - plasty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_below="@+id/imageView12"
                        android:layout_alignRight="@+id/imageView12"
                        android:layout_alignEnd="@+id/imageView12"
                        android:textColor="#212121"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_alignLeft="@+id/imageView12"
                        android:layout_alignStart="@+id/imageView12" />

                    <TextView
                        android:text="Zelený - sklo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textColor="#212121"
                        android:textSize="13sp"
                        android:layout_below="@+id/imageView14"
                        android:layout_alignLeft="@+id/imageView14"
                        android:layout_alignStart="@+id/imageView14"
                        android:layout_alignBottom="@+id/textView16"
                        android:gravity="center"
                        android:layout_alignRight="@+id/imageView14"
                        android:layout_alignEnd="@+id/imageView14" />

                    <TextView
                        android:text="Modrý - papier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:textColor="#212121"
                        android:textSize="13sp"
                        android:layout_alignLeft="@+id/imageView13"
                        android:layout_alignStart="@+id/imageView13"
                        android:layout_alignRight="@+id/imageView13"
                        android:layout_alignEnd="@+id/imageView13"
                        android:layout_alignBottom="@+id/textView15"
                        android:layout_below="@+id/imageView12"
                        android:gravity="center" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="180dp"
                android:background="@drawable/round_and_shadow"
                android:elevation="6dp"
                android:padding="10dp"
                android:layout_width="500dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="statistics">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/statistics_black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView8" />

                <TextView
                    android:text="ŠTATISTIKY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textStyle="normal|bold"
                    android:textColor="#212121"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView8"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:text="Bio odpad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="40dp"
                        android:textColor="#212121" />

                    <TextView
                        android:text="Papier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textColor="#212121"
                        android:layout_below="@+id/textView9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:text="Iné"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textColor="#212121"
                        android:layout_below="@+id/textView10"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="15dp" />

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar2"
                        android:progressDrawable="@drawable/progres"
                        android:layout_alignTop="@+id/textView10"
                        android:layout_alignLeft="@+id/p1"
                        android:layout_alignStart="@+id/p1"
                        android:layout_toStartOf="@+id/textView11"
                        android:layout_alignRight="@+id/p1"
                        android:layout_alignEnd="@+id/p1"
                        android:mirrorForRtl="false" />

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:id="@+id/p1"
                        android:progressDrawable="@drawable/progres"
                        android:layout_alignTop="@+id/textView9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="70dp"
                        android:layout_toLeftOf="@+id/textView11"
                        android:layout_toStartOf="@+id/textView11"
                        android:layout_marginRight="10dp"
                        android:mirrorForRtl="false" />

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:id="@+id/progressBar5"
                        android:progressDrawable="@drawable/progres"
                        android:layout_alignBottom="@+id/textView8"
                        android:layout_alignLeft="@+id/progressBar2"
                        android:layout_alignStart="@+id/progressBar2"
                        android:layout_alignRight="@+id/progressBar2"
                        android:layout_alignEnd="@+id/progressBar2" />

                    <TextView
                        android:text="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_alignTop="@+id/p1"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#212121" />

                    <TextView
                        android:text="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_alignTop="@+id/progressBar2"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#212121" />

                    <TextView
                        android:text="40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_alignTop="@+id/progressBar5"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#212121" />

                    <TextView
                        android:text="Aby sa zobrazili štatistiky najprv musíš zozbierať nejaký opad "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stats_error"
                        android:layout_alignTop="@+id/progressBar2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
