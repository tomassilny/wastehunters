<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_and_shadow"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/about"
            android:id="@+id/imageView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="O APLIKÁCII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9"
            android:id="@+id/textView17"
            android:layout_marginLeft="10dp"
            android:textColor="#212121"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView9"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="#212121"
                    android:text="Cieľom aplikácie je zdvíhať odpad zo zeme za účelom zredukovania odpadu odhodeného vo voľnej prírode." />

                <TextView
                    android:text="Verzia aplikácie: 1.0.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#212121"
                    android:gravity="center" />

                <TextView
                    android:text="Táto verzia aplikácie nie je finálna. V ďalších verziách bude možnosť pridať si priateľov a vidieť ich profil, zobraziť globálne štatistiky a niekoľko ďaľších funkcií."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_below="@+id/textView19"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:text="V prípade otázok alebo podnetov nám môžete odoslať mail:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_below="@+id/textView20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#212121"
                    android:gravity="center" />

                <ImageView
                    app:srcCompat="@drawable/email"
                    android:id="@+id/imageView16"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView22"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:onClick="send_mail" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/icon"
                    android:id="@+id/imageView17"
                    android:layout_marginTop="87dp"
                    android:layout_alignTop="@+id/imageView16"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>